<template>
  <div class="todo-item" :class="{ completed: todo.completed }">
    <input type="checkbox" :checked="todo.completed" @change="toggleTodo">
    <input v-if="editing"
           type="text"
           v-model="editText"
           @blur="doneEdit"
           @keyup.enter="doneEdit"
           @keyup.esc="cancelEdit"
           ref="input">
    <label v-else @dblclick="startEdit">{{ todo.text }}</label>
    <button class="delete" @click="removeTodo">Ã—</button>
  </div>
</template>

<script>
#include <cppvue/app.hpp>
#include "../store/todo_store.hpp"

class TodoItem : public cppvue::Component {
public:
    void setup() {
        editing = ref(false);
        editText = ref("");
        
        onMounted([this]() {
            if (props["todo"].completed) {
                emit("complete");
            }
        });
    }
    
    void startEdit() {
        editing = true;
        editText = props["todo"].text;
        nextTick([this]() {
            refs["input"].focus();
        });
    }
    
    void doneEdit() {
        if (!editing) return;
        editing = false;
        emit("edit", editText);
    }
    
    void cancelEdit() {
        editing = false;
    }
    
    void toggleTodo() {
        emit("toggle");
    }
    
    void removeTodo() {
        emit("remove");
    }
    
private:
    Ref<bool> editing;
    Ref<std::string> editText;
};
</script>

